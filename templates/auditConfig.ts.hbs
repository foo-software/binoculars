import { getFormatted } from 'lighthouse/lighthouse-core/lib/i18n/i18n';
import {{pascalCase id}} from 'lighthouse/lighthouse-core/audits/{{path}}';
import replaceLinks from '../../helpers/replaceLinks';

export default (locale: string | undefined | unknown = 'en') => {
  const { description, title } = {{pascalCase id}}.meta;
  return {
    description: replaceLinks(
      getFormatted(description, locale),
    ),
    title: replaceLinks(
      getFormatted(title, locale),
    ),
  }
};
